<!DOCTYPE html>
<html ng-app="TunjiWeb">
<head>
    <title><%= title %></title>

    <link rel="stylesheet"
          href="/public/lib/angular-material/angular-material.css">
    <link rel="stylesheet"
          href="/public/lib/angular-bootstrap/ui-bootstrap-csp.css">
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=RobotoDraft:300,400,500,700,400italic">
    <link rel="stylesheet"
          href="/public/stylesheets/style.css">
    <link rel="stylesheet"
          href="/public/lib/gallery-css/dist/gallery.css">
    <link rel="stylesheet"
          href="/public/lib/gallery-css/dist/gallery.theme.css">

    <!-- Angular Material requires Angular.js Libraries -->
    <script src="/public/lib/angular/angular.js" type="text/javascript"></script>
    <script src="/public/lib/angular-aria/angular-aria.js" type="text/javascript"></script>
    <script src="/public/lib/angular-scroll/angular-scroll.js" type="text/javascript"></script>
    <script src="/public/lib/angular-sanitize/angular-sanitize.js" type="text/javascript"></script>
    <script src="/public/lib/angular-animate/angular-animate.js" type="text/javascript"></script>
    <script src="/public/lib/angular-cookies/angular-cookies.js" type="text/javascript"></script>
    <script src="/public/lib/angular-resource/angular-resource.js" type="text/javascript"></script>
    <script src="/public/lib/angular-bootstrap/ui-bootstrap-tpls.js"
            type="text/javascript"></script>
    <script src="/public/lib/angular-ui-router/release/angular-ui-router.js"
            type="text/javascript"></script>
    <script src="/public/lib/angular-material-icons/angular-material-icons.js"
            type="text/javascript"></script>

    <!-- Angular Material Library -->
    <script src="/public/lib/angular-material/angular-material.js" type="text/javascript"></script>

    <!-- 3rd Party -->
    <script src="/public/lib/ngtweet/dist/ngtweet.js" type="text/javascript"></script>

    <!-- App -->
    <script src="/public/app.js"></script>

    <!-- Custom Modules -->
    <script src="/public/blogPosts/blogPosts.js"></script>

    <!-- Custom Directives -->
    <script src="/public/blogPosts/directives/tunjiBlog.js"></script>

    <!-- Custom Services -->
    <script src="/public/blogPosts/services/blogPostService.js"></script>
    <script src="/public/authentication/authService.js"></script>

    <!-- Controllers -->
    <script src="/public/controllers/HomeController.js"></script>
    <script src="/public/controllers/ProjectsController.js"></script>
    <script src="/public/controllers/ResumeController.js"></script>

</head>

<body layout="row"
      class="layout-row"
      ng-controller="AppController as app">

<md-sidenav
        class="site-sidenav md-sidenav-left md-whiteframe-z2"
        md-component-id="left"
        md-is-locked-open="$mdMedia('gt-sm')">

    <header class="nav-header material-wallpaper layout-padding">
        <img class="user-avatar" height="64" width="64" pointer-events="none"
             display="block"
             src="../../public/images/sidenav/avatar.png"
             ng-click="app.signUp()">

        <h3 style="color: white">Adetunji Dahunsi</h3>
    </header>
    <md-list>
        <md-list-item ng-repeat="item in app.menu">
            <a ng-click="app.go(item.state, $index)">
                <md-item-content
                        md-ink-ripple layout="row"
                        layout-align="start center">
                    <div class="inset">
                        <ng-md-icon icon="{{item.icon}}"
                                    style="fill: grey">
                        </ng-md-icon>
                    </div>
                    <div class="inset">
                        {{item.title}}
                    </div>
                </md-item-content>
            </a>
        </md-list-item>
    </md-list>
</md-sidenav>


<div layout="column"
     class="layout-column"
     flex
     role="main">

    <md-toolbar class="md-whiteframe-8dp site-content-toolbar">
        <div class="md-toolbar-tools">
            <md-button
                    ng-click="app.toggleSidenav('left')"
                    hide-gt-md aria-label="Menu">
                <ng-md-icon icon="menu"
                            class="white-icon">
                </ng-md-icon>
            </md-button>
            <h3>
                {{app.currentMenu.title}}
            </h3>
            <span flex></span>
            <md-button aria-label="Twitter">
                <ng-md-icon icon="twitter"
                            class="white-icon">
                </ng-md-icon>
            </md-button>
            <md-button aria-label="Github">
                <ng-md-icon icon="github-circle"
                            class="white-icon">
                </ng-md-icon>
            </md-button>
            <md-button aria-label="LinkedIn">
                <ng-md-icon icon="linkedin"
                            class="white-icon">
                </ng-md-icon>
            </md-button>
        </div>
    </md-toolbar>

    <md-content layout="column">
        <ui-view layout="column">
            <!-- Controllers go here -->
        </ui-view>
    </md-content>
</div>

<md-button
        style="position: fixed"
        class="md-fab md-fab-bottom-right"
        aria-label="Contact"
        ng-click="app.showAdd($event)">
    <ng-md-icon icon="messenger"
                class="white-icon">
    </ng-md-icon>
</md-button>
</body>

</html>